@{
    ViewData["Title"] = "Basic Tables - Tables";
}

@* * Content * *@
<!-- Basic Bootstrap Table -->
@model IEnumerable<Tickets>

<div class="card">
    <h5 class="card-header d-flex justify-content-between align-items-center">
        Ticket List
        <a asp-controller="FormLayouts" asp-action="Ticket" class="btn btn-primary px-4">Add New Ticket</a>
    </h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketName</td>
                        <td>@ticket.TicketAmount.ToString("C")</td>
                        <td>@ticket.TicketDescription</td>
                        <td>
                            <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.TicketId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@ticket.TicketId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Basic Bootstrap Table -->